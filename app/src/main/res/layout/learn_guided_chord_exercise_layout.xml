<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
    >

    <Space
        android:id="@+id/chordSpacer"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_height="20sp" />

    <fretx.version4.paging.learn.LearnGuidedChordExerciseView
        android:id="@+id/guidedChordExerciseView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chordSpacer"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <fretx.version4.FretboardView
            android:id="@+id/fretboardView"
            android:layout_below="@+id/textChord"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fretboardHeight"
            android:layout_margin="@dimen/fretboardMargin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/primaryText"
            android:background="@color/background"
            android:id="@+id/textChord"
            android:layout_gravity="center_vertical"
            android:textSize="28sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Play Chord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:textColor="@color/background"
            android:id="@+id/playChordButton"
            android:layout_below="@id/fretboardView"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:text="Chords Played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playChordButton"
            android:layout_alignParentLeft="true"
            android:id="@+id/textView6"

            android:textColor="@color/primaryText"
            android:textAlignment="center"
            android:textSize="21sp" />

        <TextView
            android:text="Time Spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playChordButton"
            android:layout_alignParentRight="true"
            android:id="@+id/textView7"

            android:textColor="@color/primaryText"
            android:textAlignment="center"
            android:textSize="21sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidedChordExerciseCompletedText"
            android:textColor="@color/primaryText"
            android:layout_below="@id/textView6"
            android:layout_alignParentLeft="true"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidedChordExerciseTimeElapsedText"
            android:textColor="@color/primaryText"
            android:layout_below="@id/textView7"
            android:layout_alignParentRight="true"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>


    </fretx.version4.paging.learn.LearnGuidedChordExerciseView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="28sp"
            android:id="@+id/exerciseChordsTextView"
            />




</LinearLayout>

</FrameLayout>