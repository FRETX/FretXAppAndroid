<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/youtube_view"
            android:layout_width="200dp"
            android:layout_height="110dp">

        </FrameLayout>

        <TextView
            android:id="@+id/song_tittle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Next Chord"
            android:textAlignment="center"
            android:textColor="@color/primaryText"
            android:textSize="12sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"
        />

    <fretx.version4.FretboardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:id="@+id/fretboardCurrent"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.09"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >

            <Button
                android:id="@+id/playPauseButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_pausebutton"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elapsedTimeText"
                android:text="00:00"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:layout_marginLeft="3dp"
                android:textColor="@color/primaryText"
                android:textSize="12sp"/>

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/timeSeekbar"
                android:layout_weight="0.8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalTimeText"
                android:text="00:00"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/primaryText"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            />

        <FrameLayout
            android:id="@+id/timeline_container"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.08"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonA"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@color/inactiveButton"
                android:text="A"
                android:textColor="@color/tertiaryText"
                android:textSize="12dp" />

            <Button
                android:id="@+id/buttonLoop"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/ic_loop_inactive"
                android:textColor="@color/tertiaryText" />

            <Button
                android:id="@+id/buttonB"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@color/inactiveButton"
                android:text="B"
                android:textColor="@color/tertiaryText"
                android:textSize="12dp" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.08"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_clock" />

            <Button
                android:id="@+id/buttonEarly1"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:background="@color/inactiveButton"
                android:text="-1s"
                android:textAllCaps="false"
                android:textColor="@color/tertiaryText"
                android:textSize="12dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/buttonEarly05"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:background="@color/inactiveButton"
                android:text="-0.5s"
                android:textAllCaps="false"
                android:textColor="@color/tertiaryText"
                android:textSize="12dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/buttonEarly025"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:background="@color/inactiveButton"
                android:text="-0.25s"
                android:textAllCaps="false"
                android:textColor="@color/tertiaryText"
                android:textSize="12dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/buttonEarly0"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:background="@color/primary"
                android:text="0s"
                android:textAllCaps="false"
                android:textColor="@color/tertiaryText"
                android:textSize="12dp"
                android:textStyle="normal" />
        </LinearLayout>

</LinearLayout>