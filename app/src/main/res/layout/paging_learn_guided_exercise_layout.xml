<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        >

    <Space
        android:id="@+id/chordSpacer"
        android:layout_width="match_parent"
        android:layout_height="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textChord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/background"
                android:textAlignment="center"
                android:textColor="@color/primaryText"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textNextChord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@color/background"
                android:textAlignment="center"
                android:textColor="@color/primaryText"
                android:textSize="12sp" />
        </RelativeLayout>

        <fretx.version4.FretboardView
            android:id="@+id/fretboardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fretboardHeight"
            android:layout_margin="@dimen/fretboardMargin"
            />

        <ProgressBar
            android:id="@+id/chord_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Play Chord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:textColor="@color/background"
            android:id="@+id/playChordButton" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Chords Played"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:textSize="21sp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:id="@+id/position" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Time Spent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:textSize="21sp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:id="@+id/time" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>