<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/search_view_border"
    android:padding="5dp">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:elevation="1dp">
    </ImageView>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:textColor="@color/primaryText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_toEndOf="@id/item_image"
        android:layout_marginLeft="10dp">
    </TextView>

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_preview"
        android:id="@+id/prePractice"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Small"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/chordPreviewProgressBar"
        android:layout_alignBottom="@+id/prePractice"
        android:layout_alignStart="@+id/prePractice"
        android:visibility="invisible"/>


</RelativeLayout>