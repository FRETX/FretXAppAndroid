<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >


    <Space
        android:id="@+id/tunerSpacer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:id="@+id/textCurrentNote"
        android:textSize="60dp"
        android:textColor="@color/black"
        android:text="E2"
        android:textAlignment="center"
        android:layout_below="@+id/tunerSpacer"
        />

    <TextView
        android:id="@+id/textPreviousNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tunerSpacer"
        android:textColor="@color/black_secondary_text"
        android:textSize="40dp"
        android:text="D#2"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textNextNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tunerSpacer"
        android:textColor="@color/black_secondary_text"
        android:textSize="40dp"
        android:text="F2"
        android:textAlignment="center"
        />

    <fretx.version4.TunerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tunerView"
        android:layout_below="@id/textCurrentNote"
        />


</RelativeLayout>