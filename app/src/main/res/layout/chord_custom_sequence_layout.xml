<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/content_frame"
              android:layout_height="match_parent"
              android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/chordPickerContainer"
            android:layout_marginBottom="20dp"
            >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:scrollbars="none"

                >

                <LinearLayout
                    android:id="@+id/chordPickerRootNoteView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/primary"
                    />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:id="@+id/chordPickerTypeView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/primary"
                    />
            </HorizontalScrollView>
        </LinearLayout>


        <fretx.version4.paging.learn.LearnCustomChordExerciseView
            android:id="@+id/customChordExerciseView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fretboardHeight"
            android:layout_margin="@dimen/fretboardMargin"
            android:orientation="vertical"
            android:layout_below="@+id/chordPickerContainer"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:visibility="gone"
                android:textColor="@color/primaryText"
                android:background="@color/background"
                android:id="@+id/textChord"
                android:layout_gravity="center_vertical"
                android:textSize="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <fretx.version4.FretboardView
                android:id="@+id/fretboardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

        </fretx.version4.paging.learn.LearnCustomChordExerciseView>

        <Button
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:id="@+id/addedChordButton"
            android:text="Chord List"

            android:background="@color/primary"
            android:textColor="@color/background"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textAlignment="center"

            android:layout_marginTop="10dp"
            android:layout_below="@+id/addChordButton"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_height="36dp"
            android:id="@+id/addChordButton"
            android:text="+ Add Chord"
            android:background="@color/primary"
            android:textColor="@color/background"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_width="150dp"
            android:layout_below="@+id/customChordExerciseView"
            android:layout_alignStart="@+id/addedChordButton"/>

        <Button
            android:layout_height="36dp"
            android:id="@+id/startExerciseButton"
            android:text="Play"
            android:background="@color/primary"
            android:textSize="20dp"
            android:textColor="@color/background"
            android:textAllCaps="false"
            android:layout_below="@+id/addedChordButton"
            android:layout_alignStart="@+id/addedChordButton"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"/>


    </RelativeLayout>
</FrameLayout>
