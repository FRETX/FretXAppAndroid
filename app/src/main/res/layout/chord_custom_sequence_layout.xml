<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/content_frame"
              android:layout_height="match_parent"
              android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/chordPickerContainer"
            >
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:id="@+id/chordPickerRootNoteView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:id="@+id/chordPickerTypeView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </LinearLayout>

        <fretx.version4.paging.learn.LearnCustomChordExerciseView
            android:id="@+id/customChordExerciseView"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_below="@id/chordPickerContainer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:visibility="invisible"
                android:textColor="@color/primaryText"
                android:background="@color/background"
                android:id="@+id/textChord"
                android:layout_gravity="center_vertical"
                android:textSize="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <fretx.version4.FretboardView
                android:id="@+id/fretboardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

        </fretx.version4.paging.learn.LearnCustomChordExerciseView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startExerciseButton"
            android:text="START"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/primary"
            android:textSize="20sp"
            android:textColor="@color/background"/>

        <ListView
            android:layout_width="100dp"
            android:layout_height="350dp"
            android:id="@+id/chordSequenceListView"
            android:layout_above="@+id/startExerciseButton"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/removeChordButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="20dp"></ListView>

        <Button
            android:layout_height="48dp"
            android:id="@+id/removeChordButton"
            android:text="-"
            android:layout_width="48dp"
            android:background="@color/primary"
            android:textColor="@color/background"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/chordSequenceListView"
            android:layout_toEndOf="@+id/customChordExerciseView"
            android:layout_marginBottom="109dp"/>

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/addChordButton"
            android:text="+"
            android:background="@color/primary"
            android:textColor="@color/background"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/customChordExerciseView"/>


    </RelativeLayout>
</FrameLayout>
