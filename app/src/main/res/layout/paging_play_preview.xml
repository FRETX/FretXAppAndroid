<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical" >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/primaryText"
                android:background="@color/background"
                android:id="@+id/textChord"
                android:textSize="28sp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp" />

        <fretx.version4.FretboardView
                android:id="@+id/fretboardView"
                android:layout_below="@+id/textChord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fretboardHeight"
                android:layout_margin="@dimen/fretboardMargin"

                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/position" />

        <Button
            android:text="Next"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:textColor="@color/tertiaryText"
            android:id="@+id/previewNextChordButton" />


        <Button
            android:text="Play"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:textColor="@color/background"
            android:id="@+id/previewStartSongButton" />

    </LinearLayout>

</FrameLayout>